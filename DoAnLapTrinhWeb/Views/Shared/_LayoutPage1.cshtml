                        {
                            <div style="color: deeppink; font-weight: bold">
                                Hello @User.Identity.Name
                            </div>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="navbar-nav ml-auto py-0">
                                <a href="/account/logout" class="nav-item nav-link">Đăng xuất</a>
                            </div>
                        }
                        else
                        {
                            <div class="navbar-nav ml-auto py-0">
                                <a href="/account/login" class="nav-item nav-link">Đăng nhập</a>
                                <a href="/account/register" class="nav-item nav-link">Đăng ký</a>
                            </div>
                        }

                    </div>
                </nav>
                
            </div>

            <div id="header-carousel" class="carousel slide col-lg-12" data-ride="carousel">
                @RenderSection("Carousel", required: false)
            </div>

        </div>
    </div>

    <!-- Featured Start -->
    <div class="container-fluid pt-5">
        @RenderSection("Featured", required: false)
    </div>
    <!-- Featured End -->

    @RenderBody()


