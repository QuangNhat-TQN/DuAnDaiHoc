@model DoAnLapTrinhWeb.Models.Product
@{
    ViewBag.Title = "Delete";
}

<h2>Xóa sản phẩm</h2>
<form action="/admin/product/delete/@Model.ProductID" method="post">
    <input type="hidden" name="Id" value="@Model.ProductID" />
    <table class="table">
        <tr>
            <th>Name</th>
            <td>@Model.ProductName</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>@Model.Price.Value.ToString("C")</td>
        </tr>
    </table>
    <button type="submit" class="btn btn-danger" style="margin-top: 30px; background-color:red">Delete</button>
    <a href="/admin/product" class="btn btn-danger" style="margin-top: 30px; background-color:black">Cancel</a>
</form>
